<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="jiang.sichu.werewolf.RoomFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="jiang.sichu.werewolf.RoomFragment">

    <GridView
        android:id="@+id/grid_seats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/gutter_width"
        android:padding="@dimen/gutter_width"
        android:verticalSpacing="@dimen/gutter_width" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/gutter_width">

        <Button
            android:id="@+id/btn_check_role"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_check_role"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>

